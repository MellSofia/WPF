<Window x:Class="WPF_StackPanel03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_StackPanel03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="10,10,561,10">
            <Button>Кнопка 1</Button>
            <Button Height="240">Кнопка 2</Button>
            <Button Height="343">Кнопка 3</Button>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="561,10,10,10">
            <Button>Кнопка 1</Button>
            <Button Width="183">Кнопка 2</Button>
            <Button Content="Кнопка 3" Width="161"/>
        </StackPanel>

    </Grid>
</Window>
