<Window x:Class="WPF_Start01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Start01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="stackPanel"  Margin="122,60,122,60">
            <TextBox TextWrapping="Wrap" Text="TextBox" Width="120" RenderTransformOrigin="0.5,0.5" Height="109">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-360.21"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <Button Content="Текст" Height="38" Width="438"/>
            <Button Content="Button"/>
        </StackPanel>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,404,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
